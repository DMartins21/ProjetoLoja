@model CarrinhoCompraViewModel

<div class="row">
    <div class="container">
        <div>
            <h4>Seu Carrinho de Compras</h4>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Quantidade</th>
                <th>Produto</th>
                <th class="text-right">Pre√ßo</th>
                <th class="text-right">SubTotal</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>
                    <td class="text-left">@item.Produto.NomeProduto</td>
                    <td class="text-right">@item.Produto.Preco.ToString("c")</td>
                    <td class="text-right"> @((item.Quantidade * item.Produto.Preco).ToString("c"))</td>
                    <td class="text-center">
                        <a asp-controller="CarrinhoCompraRepository" asp-action="RemoverdoCarrinho"
                           asp-route-produtoId="@item.Produto.IdProduto">
                        </a>
                    </td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ValorTotal.ToString("c")
                </td>
            </tr>
            </tfoot>
        </table>
        
        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                <a class="btn btn-primary" asp-controller="Produto" asp-action="Index">Continuar Comprando</a>
            </div>
        </div>
    </div>
</div>